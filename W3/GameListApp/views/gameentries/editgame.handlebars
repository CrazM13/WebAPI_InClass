<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			<form class="form-group" action="/addgame" method="POST">
				<h3>Enter Your Game Here!</h3>
				<label>Title of Game</label>
				<br />
				<input class="form-control" type="text" name="title" value="{{entries.title}}" required />
				<br />
				<label>Genre of Game</label>
				<br />
				<textarea class="form-control" name="genre" required>{{entries.genre}}</textarea>
				<br />
				<button class="btn btn-primary" type="submit">Update Game</button>
			</form>
		</div>
	</div>
</div>